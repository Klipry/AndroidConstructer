<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Mainconstr"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFFF">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="100dp" />

    <ImageView
        android:id="@+id/LogoUp"
        android:layout_width="115dp"
        android:layout_height="92dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/Nameapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textColorLink="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintStart_toEndOf="@+id/LogoUp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Category1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Button
        android:id="@+id/Category2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/Category1"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Button
        android:id="@+id/Category3"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/Category2"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Space
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Category3"
        app:layout_constraintVertical_bias="0.749"
        android:background="@color/backgroundButtonHome"/>

    <LinearLayout
        android:id="@+id/DownLine"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/ButtonHome"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/space"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/homebutton" />

        <ImageView
            android:id="@+id/ButtonLikes"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ButtonHome"
            app:layout_constraintTop_toBottomOf="@+id/space"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/likeforgolike" />

        <ImageView
            android:id="@+id/ButtonCall"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ButtonLikes"
            app:layout_constraintTop_toBottomOf="@+id/space"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@android:drawable/sym_action_call" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle"
        android:layout_width="409dp"
        android:layout_height="511dp"
        app:layout_constraintBottom_toTopOf="@+id/ButtonLikes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Category2" />

    <ImageView
        android:id="@+id/ImageScroll"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Nameapp"
        app:layout_constraintTop_toTopOf="@+id/Nameapp"
        app:srcCompat="@drawable/poloski" />

    <Button
        android:id="@+id/scrollbut1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Button"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Nameapp"
        app:layout_constraintTop_toBottomOf="@+id/ImageScroll" />

    <Button
        android:id="@+id/scrollbut2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Button"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/scrollbut1"
        app:layout_constraintTop_toBottomOf="@+id/scrollbut1" />

    <Button
        android:id="@+id/scrollbut3"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Button"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/scrollbut1"
        app:layout_constraintTop_toBottomOf="@+id/scrollbut2" />

    <Button
        android:id="@+id/scrollbut4"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Все категории"
        android:textSize="10sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/scrollbut3"
        app:layout_constraintTop_toBottomOf="@+id/scrollbut3" />


</androidx.constraintlayout.widget.ConstraintLayout>